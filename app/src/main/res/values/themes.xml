<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.MyTheme" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SearchView.NoHint" parent="Widget.AppCompat.SearchView.ActionBar">
        <item name="queryHint">@null</item>
    </style>

    <style name="ThemeOverlay.MyApp.ActionBar.Dark"
           parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="searchViewStyle">@style/SearchView.NoHint</item>
    </style>

    <style name="ActionButton"
           parent="Widget.AppCompat.ActionButton">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginEnd">@dimen/margin_form</item>
        <item name="android:layout_marginRight">@dimen/margin_form</item>
        <item name="android:elevation">8dp</item>
        <item name="android:gravity">center</item>

    </style>

</resources>